<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PatientRecordController">
    <Label text="Cadastro de Paciente" />
    <Label text="Id" />
    <TextField fx:id="idField" disable="true"/>
    <Label text="Matrícula" />
    <TextField fx:id="matriculaField" />
    <Label text="Nome Completo" />
    <TextField fx:id="nomeCompletoField" />
    <Label text="Tipo Sanguíneo" />
    <TextField fx:id="tipoSanguineoField" />
    <Button fx:id="addButton" text="Adicionar" />
    <Button fx:id="updateButton" text="Atualizar" />
    <Button fx:id="deleteButton" text="Deletar" />
    <Button fx:id="cancelButton" text="Cancelar" />
    <Button fx:id="saveButton" text="Salvar" />

    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="idColumn" text="Id" />
            <TableColumn fx:id="matriculaColumn" text="Matrícula" />
            <TableColumn fx:id="nomeCompletoColumn" text="Nome Completo" />
            <TableColumn fx:id="tipoSanguineoColumn" text="Tipo Sanguíneo" />
        </columns>
    </TableView>
</VBox>
